<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="sarkan">

  <!--<xacro:include filename="include.xacro" />-->
  <xacro:macro name="sarkan" params="parent *origin">

    <!--<link name="base_footprint"/>-->

    <joint name="base_joint" type="fixed">
      <parent link="${parent}" />
      <child link="chasis"/>
      <insert_block name="origin" />
    </joint>

    <!--Chasis-->
    <link name="chasis">
      <visual>
        <geometry>
          <box size="0.65 0.35 0.15"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.65 0.35 0.15"/>
        </geometry>
      </collision>
      <xacro:inertial_box mass="35" x="0.65" y="0.35" z="0.15">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_box>
    </link>

    <!--Right-->
    
    <link name="right_wheel">
      <visual>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
        <origin xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>

    <joint name="joint_right_rear_wheel" type="continuous">
      <parent link="chasis"/>
      <child link="right_wheel"/>
      <origin xyz="-0.27 -0.295 -0.06" rpy="1.57 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.0" friction="0.1"/>
    </joint>

  <!--Left -->

    <link name="left_wheel">
      <visual>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
        <origin xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>

    <joint name="joint_left_rear_wheel" type="continuous">
      <parent link="chasis"/>
      <child link="left_wheel"/>
      <origin xyz="-0.27 0.295 -0.06" rpy="1.57 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.0" friction="0.1"/>
    </joint>

    <link name="master">
      <visual>
        <geometry>
          <box size="0.001 0.001 0.001"/>
        </geometry>
        <material name="blue"/>
      </visual>
      <collision>
        <geometry>
          <box size="0.001 0.001 0.001"/>
        </geometry>
      </collision>
      <xacro:inertial_box mass="0.001" x="0.01" y="00.1" z="0.01">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_box>
    </link>
    <joint name="master_joint" type="revolute">
      <parent link="chasis"/>
      <child link="master"/>
      <origin xyz="0.24 0 0" rpy= "1.57 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
    </joint>

    <link name="right_wheel_front_assembly">
      <visual>
        <geometry>
          <cylinder length="0.001" radius="0.04"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.001" radius="0.04"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.001" radius="0.04">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>

    <link name="right_wheel_front">
      <visual>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>

    <joint name="joint_right_wheel_front" type="revolute">
      <parent link="chasis"/>
      <child link="right_wheel_front_assembly"/>
      <origin xyz="0.27 -0.295 -0.06" rpy="1.57 0 0"/>
      <axis xyz="0 1 0"/>
      <dynamics damping="0.0" friction="0.1"/>
      <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
    </joint>

    <joint name="right_wheel_joint" type="continuous">
      <parent link="right_wheel_front_assembly"/>
      <child link="right_wheel_front"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.0" friction="1"/>
      <limit effort="100" velocity="1"/>
    </joint>

  <!--  -->

    <link name="left_wheel_front_assembly">
      <visual>
        <geometry>
          <cylinder length="0.001" radius="0.04"/>
        </geometry>
        <origin xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.001" radius="0.04"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.001" radius="0.04">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>
    <link name="left_wheel_front">
      <visual>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
        <origin xyz="0 0 0"/>
        <material name="white"/>
      </visual>
      <collision>
        <origin xyz="0 0 0"/>
        <geometry>
          <cylinder length="0.08" radius="0.12"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="1.0" length="0.08" radius="0.12">
        <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>

    <joint name="joint_left_wheel_front" type="revolute">
      <parent link="chasis"/>
      <child link="left_wheel_front_assembly"/>
      <origin xyz="0.27 0.295 -0.06" rpy="1.57 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="1" lower="-0.78" upper="0.78"/>
    </joint>

    <joint name="left_wheel_joint" type="continuous">
      <parent link="left_wheel_front_assembly"/>
      <child link="left_wheel_front"/>
      <origin xyz="0.0 0 0" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <dynamics damping="0.0" friction="1"/>
      <limit effort="100" velocity="1"/>
    </joint>

    <!--camara-->

    <joint name="camera_joint" type="fixed">
      <parent link="chasis"/>
      <child link="camera_link"/>
      <origin xyz="0.276 0 0.181" rpy="0 0.18 0"/>
    </joint>

    <link name="camera_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 -0.156 0"/>
        <geometry>
          <box size="0.04 0.17 0.03"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 -0.156 0"/>
        <geometry>
          <box size="0.04 0.17 0.03"/>
        </geometry>
      </collision>
      <xacro:inertial_box mass="0.181" x="0.04" y="0.17" z="0.03">
        <origin xyz="0 0 0" rpy="0 -0.156 0"/>
      </xacro:inertial_box>
    </link>
    
    <joint name="camera_optical_joint" type="fixed">
      <parent link="camera_link"/>
      <child link="camera_link_optical"/>
      <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
    </joint>

    <link name="camera_link_optical"></link>

    <!--lidar-->
    <joint name="laser_joint" type="fixed">
      <parent link="chasis"/>
      <child link="laser_frame"/>
      <origin xyz="0.2 0 0.15" rpy="0 0 0"/>
    </joint>

    <link name="laser_frame">
      <visual>
        <geometry>
          <cylinder radius="0.05" length="0.04"/>
        </geometry>
        <material name=""> 
            <color rgba="0.25098 0.25098 0.25098 1" />   
        </material> 
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.05" length="0.04"/>
        </geometry>
      </collision>
      <xacro:inertial_cylinder mass="0.3" length="0.04" radius="0.05">
          <origin xyz="0 0 0" rpy="0 0 0"/>
      </xacro:inertial_cylinder>
    </link>
  </xacro:macro>

</robot>